---
import Container from "./Container.astro"

---

<div class="relative py-16">
  <div aria-hidden="true" class="absolute inset-0 h-max w-full m-auto grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20">
    <div class="blur-[106px] h-56 bg-gradient-to-br from-white to-[#ff0061] dark:from-[#ff0061]"></div>
    <div class="blur-[106px] h-32 bg-gradient-to-r from-white to-[#ff0061] dark:to-[#ff0061]"></div>
  </div>
  <Container>
    <div class="relative">
      <div class="mt-6 m-auto space-y-6 md:w-8/12 lg:w-7/12">
        <h1 class="text-center text-4xl font-bold text-gray-800 dark:text-white md:text-5xl">Implantes para Artroscopia</h1>
      </div>
    </div>
  </Container>
</div>